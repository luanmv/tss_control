<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.luan.controlmario.Controles">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/valores"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/valZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImgDown"
            android:layout_width="93dp"
            android:layout_height="98dp"
            android:layout_below="@+id/ImgLeft"
            android:layout_marginTop="34dp"
            android:layout_toEndOf="@+id/ImgLeft"
            android:layout_toRightOf="@+id/ImgLeft"
            android:src="@drawable/mario"
            android:contentDescription="@string/mario_down" />

        <ImageView
            android:id="@+id/ImgLeft"
            android:layout_width="93dp"
            android:layout_height="98dp"
            android:layout_alignTop="@+id/ImgRight"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@+id/ImgTop"
            android:layout_toStartOf="@+id/ImgTop"
            android:src="@drawable/mario"
            android:contentDescription="@string/mario_left" />

        <ImageView
            android:id="@+id/ImgRight"
            android:layout_width="93dp"
            android:layout_height="98dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImgTop"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/mario"
            android:contentDescription="@string/mario_right" />

        <ImageView
            android:id="@+id/ImgTop"
            android:layout_width="93dp"
            android:layout_height="98dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/mario"
            android:contentDescription="@string/mario_top" />
    </RelativeLayout>

</LinearLayout>
